@model AquaWorld.Data.Models.Creature

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron" style="background-color: rgba(255, 255, 255, 0.8)">
    <h2>@Model.Name</h2>
    <p style="text-align:center">
        <img src="@Model.ImageUrl" width="300" />
    </p>
    <p>
        <i>@Model.Description</i>
    </p>
    <span>Left: </span>
    <span style="color:green"> @Model.AvailableCount </span>
    <p style="text-align:center">
        @*@Html.ActionLink("Add to cart", "AddToCart", new { id = Model.Id })*@
        <a href="/ShoppingCart/AddToCart/@Model.Id">Add to Cart</a>
    </p>
</div>

