@model IEnumerable<AquaWorld.Web.Models.CreatureViewModel>

@{
    ViewBag.Title = "Index";
}

<div style="background-color: rgba(255, 255, 255, 0.8); padding: 15px 15px 15px 15px; border-radius:15px 15px 15px 15px">
    <h2>All Creatures</h2>

    <table class="table">
        <tr class="row">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>Details</th>
            @if (User.IsInRole("admin"))
            {
                <th>Edit?</th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr class="row">
                <td width="130">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td width="100">
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td width="130">
                    @Html.DisplayFor(modelItem => item.AvailableCount)
                </td>
                <td>
                    <img src="@item.ImageUrl" class="img-rounded" width="100" height="70" />
                </td>
                <td width="100">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                @if (User.IsInRole("admin"))
                {
                    <td width="100">
                        @*@Html.ActionLink("Edit Creature Info", "EditCreature", new { area = "Admin", id = item.Id })*@
                        <a href="Admin/Admin/EditCreature/@item.Id">Edit</a>
                    </td>
                }
            </tr>
        }

    </table>
</div>